
.address-list .actions {
	display: flex;
	align-items: center;
}
.address-list .actions .edit {
	margin-right: 45rpx;
}
.address-list .address {
	display: flex;
	margin-right: 64rpx;
}
.address-list .address .left {
	flex: 1;
}
.address-list .address .receiver {
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.address-list .address .default-tag {
	width: 72rpx;
	flex-shrink: 0;
	margin-left: 30rpx;
}

/* 新建地址 */
.tools-bar {
	position: fixed;
	bottom: 20rpx;
	left: 0;
	width: 100%;
	padding: 0 20rpx;
	box-sizing: border-box;
}
.tools-bar-fix {
	padding-bottom: 100rpx;
}

