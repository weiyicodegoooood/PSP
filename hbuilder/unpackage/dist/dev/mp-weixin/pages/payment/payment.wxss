
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100vh;
}
.title {
	font-size: 24px;
	margin-bottom: 20px;
	color: #333;
}
.input-container {
	position: relative;
	width: 80%;
}
.password-input {
	width: calc(100% - 40px);
	margin-bottom: 20px;
	padding: 10px 40px 10px 10px;
	border: 1px solid #ccc;
	border-radius: 5px;
	font-size: 16px;
	color: #333;
}
.password-icon {
	position: absolute;
	top: 50%;
	right: 10px;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	width: 20px;
	height: auto;
}
.submit-button {
	background-color: #007aff;
	color: #fff;
	padding: 10px 20px;
	border-radius: 5px;
	font-size: 18px;
}
.success-message {
	color: green;
	margin-top: 20px;
}

