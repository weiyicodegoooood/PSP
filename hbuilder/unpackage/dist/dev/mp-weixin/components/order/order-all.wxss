.goos_container {
	display: flex;
	flex-direction: column;
	padding-top: 66rpx;
}
.goos_lists {
	display: flex;
	flex-direction: column;
	padding: 0 32rpx;
	position: relative;
	border-bottom: 16rpx solid rgba(0,0,0,0.05);
}
.goos_lists:last-child{
	border-bottom: none;
}
.goos_lists:nth-child(1){
	border-top: 16rpx solid rgba(0,0,0,0.05);
}
.clock_image {
	width: 32rpx;
	height: 32rpx;
	margin-right: 10rpx;
}
.goods_time {
	font-size: 25rpx;
	color: #1a1a1a;
	opacity: 0.5;
}
.goods_state{
	font-size: 30rpx;
	color: #fa2a2d;
	line-height: 1;
}
._state{
	line-height: 1;
}
.delete_image {
	width: 32rpx;
	height: 32rpx;
	margin-left: 16rpx;
	vertical-align: middle;
}
.sigle_goos_list {
	display: flex;
	padding-bottom: 26rpx;
	border-bottom: 2rpx solid rgba(0, 0, 0, 0.2);
}
.image_contaner {
	width: 132rpx;
	height: 132rpx;
	margin: 0 32rpx 0 0;
}
.goods_image {
	width: 132rpx;
	height: 132rpx;
	border-radius: 8rpx;
}
.goods_description {
	width: 75%;
}
.title_size {
	width: 85%;
}
.goods_title {
	color: #1a1a1a;
	font-size: 28rpx;
	line-height: 40rpx;
	margin-bottom: 26rpx;
}
.goods_size {
	color: #1A1A1A;
	opacity: 0.5;
	font-size: 24rpx;
}
.money_amount {
	width: 15%;
}
.goods_money {
	width: 100%;
	font-size: 24rpx;
	text-align: right;
}
.goods_amount {
	width: 100%;
	color: #1A1A1A;
	opacity: 0.5;
	font-size: 24rpx;
	align-self: center;
	text-align: right;
}
.bottom_amount_money {
	display: flex;
	width: 100%;
	justify-content: flex-end;
	margin-top: 30rpx;
}
._amount {
	margin: 2rpx 10rpx 0 0;
	font-size: 24rpx;
	color: #1a1a1a;
	opacity: 0.5;
	display: inline-block;
	vertical-align: middle;
}
.need_pay {
	color: #1a1a1a;
	font-size: 28rpx;
	display: inline-block;
	vertical-align: middle;
}
._money {
	color: #fa2a2d;
	font-size: 32rpx;
	display: inline-block;
	vertical-align: middle;
}
.state_btn {
	display: flex;
	justify-content: flex-end;
	padding: 20rpx 0 40rpx 0;
}
._btn {
	width: 152rpx;
	height: 58rpx;
	text-align: center;
	color: #FA2A2D;
	font-size: 28rpx;
	line-height: 58rpx;
	border:2rpx solid #FA2A2D;
	border-radius: 6rpx;
}
.separate {
	height: 16rpx;
	background: rgba(0, 0, 0, 0.05);
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
}
.align_items_center {
	display: flex;
	align-items: center;
}
.justify_content_center {
	display: flex;
	justify-content: center;
}
.flex_column {
	display: flex;
	flex-direction: column;
}
.flex_row {
	display: flex;
	flex-direction: row;
}
.flex_end {
	display: flex;
	justify-content: flex-end;
}
.space_between {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin: 20rpx 0;
	min-height: 40rpx;
}

